    "@codemirror/search": "^6.5.11",
    "@codemirror/state": "^6.5.3",
    "@codemirror/view": "^6.39.7",
    "@excalidraw/excalidraw": "^0.17.0",
    "framer-motion": "^12.23.26",
    "fuse.js": "^7.1.0",
    "gray-matter": "^4.0.3",
    "mermaid": "^11.12.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "rehype-katex": "^7.0.1",
    "rehype-prism-plus": "^2.0.1",
    "rehype-raw": "^7.0.0",
